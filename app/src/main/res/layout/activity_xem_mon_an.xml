<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XemMonAn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F8F4E1">

        <TextView
            android:id="@+id/tvTenMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên món ăn"
            android:textSize="16pt"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#F8F4E1"
            android:paddingBottom="5dp"
            android:background="@drawable/rounded_bottom_background"/>
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="50dp"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:id="@+id/ivAnhMonAn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/cafe"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvMoTaMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả món ăn : "
            android:textSize="10pt"
            android:textColorHint="#69472E"
            android:textColor="#69472E"
            android:layout_margin="15px"
            android:padding="10dp"
            android:background="@drawable/edittext_background"/>/>

        <TextView
            android:id="@+id/tvGiaMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Giá món ăn : "
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:textColorHint="#69472E"
            android:textColor="#69472E"
            android:layout_margin="15px"
            android:padding="10dp"
            android:background="@drawable/edittext_background"/>

        <Button
            android:id="@+id/btnSuaMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa món ăn"
            android:background="@drawable/primarybutton"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="8pt"
            />

        <Button
            android:id="@+id/btnXoaMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa món ăn"
            android:background="@drawable/dangerbutton"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="8pt"/>

        <Button
            android:id="@+id/imgBtnTroLai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trở lại"
            android:background="@drawable/primarybutton"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="8pt"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>