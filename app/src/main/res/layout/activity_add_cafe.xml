<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddACafeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-48dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm mới quán café"
            android:textAlignment="center"
            android:textColor="#707070"
            android:textSize="12pt"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/imgAnhCafe"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/nhahang" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/btnChupanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10px"
                android:background="@drawable/buttonoutline"
                android:textColor="#069C54"
                android:padding="10dp"
                android:text="Chụp ảnh"
                android:textSize="8pt"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                />

            <Button
                android:id="@+id/btnChonAnhCafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10px"
              android:background="@drawable/buttonoutline"
                android:textColor="#069C54"
                android:padding="10dp"
                android:text="Chọn ảnh"
                android:textSize="8pt"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="8dp"

                />
        </LinearLayout>

        <Button
            android:id="@+id/btnCacHinhAnhCafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các hình ảnh của quán café"
            android:textSize="8pt"
            android:textStyle="bold"
             android:background="@drawable/primarybutton"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào tên quán café ...." />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào địa chỉ quán café...." />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào email quán café...." />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào số điện thoại quán café...." />

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả quán café...." />

<!--        Time picker 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="10pt"
                android:textStyle="bold"
                android:text="Giờ mở cửa"
                android:layout_marginBottom="10dp"
                />

            <TimePicker
                android:id="@+id/tpOpenTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

<!--        Time Picker 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="10pt"
                android:textStyle="bold"
                android:text="Giờ đóng cửa"
                tools:ignore="RtlCompat"
                android:layout_marginBottom="10dp"
                />

            <TimePicker
                android:id="@+id/tpCloseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

<!--    Đoạn thực đơn-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thực đơn"
                android:background="@drawable/primarybutton"
                android:textSize="9pt"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                />

        </LinearLayout>

<!--      Các nút bấm-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hủy bỏ"
                android:textSize="8pt"
                android:background="@drawable/buttonoutline"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác nhận"
                android:textSize="8pt"
                android:background="@drawable/buttonoutline"
                android:layout_marginStart="8dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>