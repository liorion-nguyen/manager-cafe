<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2d9c5"
    tools:context=".Plugins.Setting">

    <!-- Back Button -->


    <!-- Title -->

    <!-- Store Information -->

    <!-- Manage Menu -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="144dp"
        android:padding="10dp"
        android:text="Cài đặt"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/manageMenuLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/buttonoutline"
        android:backgroundTint="#48312c"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/storeInfoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_menu"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý menu"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Inventory Management -->
    <LinearLayout
        android:id="@+id/inventoryManagementLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/buttonoutline"
        android:backgroundTint="#48312c"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/manageMenuLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_inventory"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý tồn kho"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Staff Management -->
    <LinearLayout
        android:id="@+id/staffManagementLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/buttonoutline"
        android:backgroundTint="#48312c"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/inventoryManagementLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_staff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý nhân viên"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Order Management -->
    <LinearLayout
        android:id="@+id/orderManagementLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/buttonoutline"
        android:backgroundTint="#48312c"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/staffManagementLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_order"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý đơn hàng"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Notification Settings -->
    <LinearLayout
        android:id="@+id/notificationSettingsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/buttonoutline"
        android:backgroundTint="#48312c"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/orderManagementLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_notifications"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt thông báo"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Reports and Statistics -->
    <LinearLayout
        android:id="@+id/reportsStatisticsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/buttonoutline"
        android:backgroundTint="#48312c"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/notificationSettingsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_reports"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Báo cáo và thống kê"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="24sp" />
    </LinearLayout>


    <Button
        android:id="@+id/Logout"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:layout_marginTop="596dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/button_login"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="8dp"
        android:padding="15dp"
        android:text="Đăng xuất"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/storeInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="504dp"
        android:background="@drawable/buttonoutline"
        android:backgroundTint="#48312c"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_store"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Thông tin cửa hàng"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
