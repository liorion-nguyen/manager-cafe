<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaMonAnActivity">
    <LinearLayout
        android:background="#F8F4E1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SỬA MÓN ĂN"
            android:textSize="12pt"
            android:textColor="#69472E"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="100dp"
            >
            <ImageView
                android:id="@+id/ivAnhMonAn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/food"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/btnChupanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chụp ảnh"
                android:layout_gravity="center"
                android:background="@drawable/buttonoutline"
                android:textColor="#69472E"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/btnChonAnh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh"
                android:background="@drawable/buttonoutline"
                android:textColor="#69472E"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtTenMonAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên món ăn: "
                android:background="@drawable/edittext_background"
                android:textColorHint="#69472E"
                android:textSize="8pt"
                android:textColor="#69472E"
                android:layout_margin="10dp"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/edtGiaMonAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá món ăn"
                android:inputType="number"
                android:textSize="8pt"
                android:textColorHint="#69472E"
                android:textColor="#69472E"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/edittext_background"
                />

            <EditText
                android:id="@+id/edtMoTaMonAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mô tả món ăn"
                android:textSize="8pt"
                android:textColorHint="#69472E"
                android:textColor="#69472E"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/edittext_background"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            >

            <Button
                android:id="@id/btnHuyBo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy bỏ"
                android:background="@drawable/primarybutton"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:layout_marginEnd="8dp"
                />

            <Button
                android:id="@+id/btnXacNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác nhận"
                android:background="@drawable/primarybutton"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:layout_marginStart="8dp"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>