<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemMoiMonAnActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F8F4E1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm thực đơn mới"
            android:textSize="16pt"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColorHint="#F8F4E1"
            android:textColor="#F8F4E1"
            android:background="@drawable/rounded_bottom_background"
            />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="50dp"
            >
            <ImageView
                android:id="@+id/ivAnhMonAn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/food"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/btnChupanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chụp ảnh"
                android:background="@drawable/buttonoutline"
                android:textColor="#69472E"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:drawableStart="ca" />
            <Button
                android:id="@+id/btnChonAnh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh"
                android:background="@drawable/buttonoutline"
                android:textColor="#69472E"
                android:layout_gravity="center"/>
        </LinearLayout>


        <EditText
            android:id="@+id/edtTenMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên món ăn: "
            android:layout_margin="15px"
            android:textSize="8pt"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:textColorHint="#69472E"
            android:textColor="#69472E"
            android:padding="10dp"
            android:background="@drawable/edittext_background"/>/>

        <EditText
            android:id="@+id/edtMoTaMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả món ăn: "
            android:layout_margin="15px"
            android:textSize="8pt"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:textColorHint="#69472E"
            android:textColor="#69472E"
            android:padding="10dp"
            android:background="@drawable/edittext_background"/>/>

        <EditText
            android:id="@+id/edtGiaMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:hint="Giá món ăn: "
            android:paddingTop="30px"
            android:inputType="numberDecimal"
            android:layout_margin="15px"
            android:paddingBottom="30px"
            android:textColorHint="#69472E"
            android:textColor="#69472E"
            android:padding="10dp"
            android:background="@drawable/edittext_background"/>/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/imgBtnTroLai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Hủy bỏ"
                android:background="@drawable/primarybutton"
                android:textColor="@color/white"

                android:textSize="20sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnXacNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Xác nhận"
                android:background="@drawable/primarybutton"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>